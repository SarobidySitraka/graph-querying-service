# ============================================
# APPLICATION CONFIGURATION
# ============================================
APP_NAME=graph-querying-service
APP_VERSION=1.0.0
APP_DESCRIPTION="Service de requÃªtage Neo4j avec GraphRAG"
APP_ENV=development
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000
APP_RELOAD=true

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log

# ============================================
# NEO4J CONFIGURATION
# ============================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_strong_password
NEO4J_DATABASE=neo4j
NEO4J_MAX_CONNECTION_LIFETIME=3600
NEO4J_MAX_CONNECTION_POOL_SIZE=50
NEO4J_CONNECTION_TIMEOUT=30

# ============================================
# LLM CONFIGURATION (OpenAI)
# ============================================
OPENAI_API_KEY=sk-your-api-key-here
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=2000
LLM_TIMEOUT=60

# ============================================
# REDIS CONFIGURATION (Cache)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_ENABLED=false
CACHE_TTL=3600

# ============================================
# SECURITY CONFIGURATION
# ============================================
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Keys pour l'authentification
API_KEY_ENABLED=true
API_KEYS=["key1-change-me","key2-change-me"]

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ENABLED=true
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET","POST","PUT","DELETE","OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_CALLS=100
RATE_LIMIT_PERIOD=60

# ============================================
# QUERY CONFIGURATION
# ============================================
MAX_QUERY_RESULTS=1000
DEFAULT_QUERY_LIMIT=100
QUERY_TIMEOUT=30
ENABLE_QUERY_VALIDATION=true
ENABLE_READ_ONLY_MODE=true

# ============================================
# GRAPHRAG CONFIGURATION
# ============================================
GRAPHRAG_ENABLED=true
GRAPHRAG_USE_SCHEMA_CONTEXT=true
GRAPHRAG_MAX_CONTEXT_LENGTH=4000
GRAPHRAG_INCLUDE_EXAMPLES=true

# ============================================
# MONITORING & METRICS
# ============================================
ENABLE_METRICS=true
METRICS_PORT=9090